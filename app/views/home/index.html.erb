<% content_for :head do %>
  <%= javascript_include_tag "home" %>
<% end %>
<div ng-app="app" ng-controller="viewCtrl">  

  <% if not user_signed_in? %>
    <%= render "welcome" %>
  <% end %>

  <div class="dayframe clearfix <%= 'demo' if not user_signed_in? %>">

    <div class="working-area">

      <div class="timeline clearfix">

        <div class="time-label">
          <div class="hour" ng-repeat="hour in hours">
            {{hour}}
          </div>
        </div>
        
        <div class="time-droppable">
          <div class="hour" ng-repeat="hour in hours">
            <div class="snap"></div>
            <div class="snap"></div>
            <div class="snap"></div>
            <div class="snap"></div>
          </div>
          <task class="assigned" ng-repeat="task in Tasks.timeline"></task>
        </div>

      </div>
    </div>

    <div class="widget-area">
      
      <%= render "navbar" %>

      <div class="task-list panel panel-default">
        <div class="panel-heading clearfix">
          Task Backlog<a class="btn btn-default" ng-click="modals.task()">Add Task</a>
        </div>
        <div class="panel-body">
          <task ng-repeat="task in Tasks.backlog | orderBy:'priority'"></task>
        </div>
      </div>

      <%= render "wake_sleep" %>

    </div>

  
  </div>
</div>
