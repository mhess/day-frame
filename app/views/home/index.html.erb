<% content_for :head do %>
  <%= javascript_include_tag "home" %>
<% end %>
<div>
  <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
</div>
<div ng-app="app" ng-controller="viewCtrl" >
  <div>
    <a ng-click="changeDay(-1)">back</a>
    {{day | date:"longDate"}}
    <a ng-click="changeDay(1)">forward</a>
    | <a ng-click="changeDay()">today</a></div>
  <div class="dragArea">
    <div class="timeline">
      <div class="hour" ng-repeat="hour in hours" ng-class-odd="'oddHour'">
	<div class="snap">{{hour}}</div>
	<div class="snap"></div>
	<div class="snap"></div>
	<div class="snap"></div>
      </div>
    </div>
    <div class="task" ng-repeat="task in Tasks.list | assigned:true"></div>
    <div class="taskList">
      <a ng-click="modal.task()">Add Task</a>
      <div class="task" ng-repeat="task in Tasks.list | assigned:false | orderBy:'priority'"></div>
    </div>
  </div>
  <div id="my-modal-back" ng-show="modal.active"></div>
  <div class="task-modal my-modal"></div>
</div>
